{% if ansible_facts.os_family == 'RedHat' %}
{% set org = ldap_base.split('dc=')[-1] %}
dn: {{ ldap_base }}
objectClass: top
objectClass: dcObject
objectClass: organization
o: {{ org }}
dc: cluster

{% endif %}
dn: ou=people,{{ ldap_base }}
ou: people
objectClass: organizationalUnit

dn: ou=groups,{{ ldap_base }}
ou: groups
objectClass: organizationalUnit

dn: cn={{ ldap_users_group }},ou=groups,{{ ldap_base }}
cn: {{ ldap_users_group }}
gidNumber: {{ ldap_first_gid }}
objectClass: top
objectClass: posixGroup

{% for group in ldap_secondary_groups %}
dn: cn={{ group.name }},ou=groups,{{ ldap_base }}
cn: {{ group.name }}
gidNumber: {{ ldap_first_gid + loop.index }}
objectClass: top
objectClass: posixGroup
{% for user in group.users %}
memberUid: {{ user}}
{% endfor %}

{% endfor %}

{% for user in ldap_users %}
dn: uid={{ user.login }},ou=people,{{ ldap_base }}
objectClass: person
objectClass: inetOrgPerson
objectClass: posixAccount
objectClass: shadowAccount
objectClass: top
uid: {{ user.login }}
cn: {{ user.firstname }} {{ user.lastname }}
givenName: {{ user.firstname }}
sn: {{ user.lastname }}
mail: {{ user.login }}@{{ ldap_email_domain}}
uidNumber: {{ ldap_first_uid + loop.index0 }}
gidNumber: {{ ldap_first_gid }}
userPassword: {{ ldap_user_password }}
homeDirectory: /home/{{ user.login }}
loginShell: /bin/bash

{% endfor %}
